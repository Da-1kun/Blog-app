<div class="ui stackable centered grid">
  <div class="ten wide left aligned column">
    <div class="ui very padded segment">
      <h4 class="ui header">
        <%= gravatar_for @article.user %>
        <div class="content">
          <%= link_to @article.user.username, user_path(@article.user), class: 'under-line' %>
          <div class="sub header">
          Updated at &nbsp;<%= @article.updated_at.strftime('%Y/%m/%d') %>
          </div>
        </div>
      </h4>
      <p></p>
      <div class="ui huge header"><%= @article.title %></div>
      <% if @article.categories.any? %>
        <%= render @article.categories %>
      <% end %>
      <div class="ui clearing divider"></div>
      <%= markdown(@article.description).html_safe %>
      <div class="ui clearing divider"></div>
      <% if logged_in? && (current_user == @article.user || current_user.admin?) %>
        <%= link_to edit_article_path(@article), class: "ui green labeled icon button" do %>
          <i class="edit icon"></i>Edit
        <% end %>
        <button class="ui red labeled icon button" id="delete_article_btn">
          <i class="trash alternate icon"></i>
          Delete
        </button>
      <% end %>
    </div>
  </div>
  <div class="two wide column">
    <%= render 'shared/categories' %>
  </div>
</div>

<!-- delete confirm Modal-->
<div class="ui basic modal" id="articleModal">
  <div class="ui icon header">
    <i class="trash alternate icon"></i>
    Delete Article
  </div>
  <div class="content">
    <p>Are you sure you want to delete this article?</p>
  </div>
  <div class="actions">
    <div class="ui red basic cancel inverted button">
      <i class="remove icon"></i>
      No
    </div>
    <%= link_to article_path(@article), method: :delete, class: "ui green ok inverted button" do %>
      <i class="checkmark icon"></i>
      Yes
    <% end %>
  </div>
</div>