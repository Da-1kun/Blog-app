<%= form_for @category, html: {class: "ui large form"} do |f| %>
  <div class="ui stacked segment">
    <div class="field">
      <%= render 'shared/errors', obj: @category %>
      <div class="ui left icon input">
        <i class="tag icon"></i>
        <%= f.text_field :name, placeholder: "name" %>
      </div>
    </div>
    <%= f.submit(@category.new_record? ? "Post" : "Update", class: "ui fluid large teal submit button")%>
  </div>
<% end %>