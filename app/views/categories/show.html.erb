<div class="ui stackable centered grid">
  <div class="ten wide left aligned column">
    <div class="ui very padded segment">
      <div class="ui huge center aligned header">
        <div class="content">
          <i class="teal tag icon"></i>
          <% if logged_in? and current_user.admin? %>
            <%= link_to @category.name, edit_category_path(@category), class: "under-line" %>
          <% else %>
            <%= @category.name%>
          <% end %>
        </div>
      </div>
      <div class="ui relaxed divided list">
        <%= render 'articles/article', obj: @category_articles %>
      </div>
    </div>
    <%= will_paginate @category_articles, renderer: WillPaginateSemanticUi::ActionView::Renderer %>
  </div>
  <div class="two wide column">
    <%= render 'shared/categories' %>
  </div>
</div>