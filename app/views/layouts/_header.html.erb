<!-- Header -->
<header id="header" class="sticky">
  <%= link_to "MY NOTE", logged_in? ? articles_path : root_path, class: "logo" %>
  <%= search_form_for @search, url: search_path do |f| %>
    <div class="ui icon input">
      <%= f.text_field :title_or_description_cont ,placeholder: "Search" %>
      <i class="search icon"></i>
      <%= f.submit id: "search", style: "display: none" %>
    </div>
  <% end %>
  <ul>
    <% if logged_in? %>
      <li><%= link_to 'My Page', user_path(current_user) %></li>
      <li><%= link_to 'Articles', articles_path %></li>
      <li><%= link_to 'Post', new_article_path, data: {"turbolinks" => false} %></li>
      <li><%= link_to 'Users', users_path %></li>
      <% if current_user.admin? %>
        <li><%= link_to 'Add Category', new_category_path %></li>
      <% end %>
      <li><%= link_to 'Log Out', logout_path, method: :delete %></li>      
    <% else %>
      <li><%= link_to 'Articles', articles_path %></li>
      <li><%= link_to 'Log In', login_path %></li>
      <li><%= link_to 'Sign Up', signup_path %></li>
    <% end %>
  </ul>
  <div class="toggle"></div>
</header>