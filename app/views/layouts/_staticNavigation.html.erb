<div class="borderless fixed fluid inverted large menu ui">
  <div class="ui container">
    <a class="toc item">
      <i class="sidebar icon"></i>
    </a>
    <%= link_to articles_path, class: 'item' do %>
      <i class="list alternate outline icon"></i>Article List
    <% end %>
    <%= link_to users_path, class: 'item' do %>
      <i class="circular users icon"></i>Users
    <% end %>
    <% if logged_in? %>
      <%= link_to new_article_path, class: 'item' do %>
        <i class="edit icon"></i>Write Article
      <% end %>
      <%= link_to edit_user_path(current_user), class: 'item' do %>
        <i class="address card outline icon"></i>Edit Your Profile
      <% end %>
    <% end %>
    <% if logged_in? and current_user.admin? %>
      <%= link_to new_category_path, class: 'item' do %>
        <i class="tag icon"></i>Add Category
      <% end %>
    <% end %>
    <div class="right item">
      <% if logged_in? %>
        <%= link_to  logout_path, method: :delete, class: 'ui inverted button' do %>
          <i class="sign-out icon"></i>Log out
        <% end %>
      <% else %>
        <%= link_to login_path, class: 'ui inverted button' do %>
          <i class="sign-in icon"></i>Log in
        <% end %>
        <%= link_to signup_path, class: 'ui inverted button' do %>
          <i class="address card outline icon"></i>Sign in
        <% end %>
      <% end %>
    </div>
  </div>
</div>