<div class="ui centered grid mt-10">
  <div class="center aligned row">
    <div class="ui middle aligned center aligned grid">
      <div class="short column">
        <h2 class="ui teal image header">
          <i class="home icon"></i>
          <div class="content">
            Log in to your account
          </div>
        </h2>
        <%= form_for :session, url: login_path, html: {class: "ui large form"} do |f| %>
          <div class="ui stacked segment">
            <div class="field">
              <div class="ui left icon input">
                <i class="envelope icon"></i>
                <%= f.email_field :email, placeholder: "E-mail address" %>
              </div>
            </div>
            <div class="field">
              <div class="ui left icon input">
                <i class="lock icon"></i>
                <%= f.password_field :password, placeholder: "Password" %>
              </div>
            </div>
            <%= f.submit "Log in", class: "ui fluid large teal submit button" %>
          </div>
        <% end %>

        <div class="ui message">
          New to us? <%= link_to 'Sign up', signup_path %>
        </div>
      </div>
    </div>
  </div>
</div>