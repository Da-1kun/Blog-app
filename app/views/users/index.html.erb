<div class="ui stackable centered grid">
  <div class="ten wide left aligned column">
    <div class="ui very padded segment">
      <h1 class="ui center aligned icon header">
        <i class="circular users icon"></i>
        Users
      </h1>
      <div class="ui relaxed divided list">
        <% @users.each do |user| %>
          <div class="item">
            <div class="ui large header">
              <%= gravatar_for user %>
              <div class="content">
                <%= link_to user.username, user_path(user), class: "under-line" %>
                <div class="sub header">Posted <%= pluralize(user.articles.count, "article") %></div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <%= will_paginate @users, renderer: WillPaginateSemanticUi::ActionView::Renderer %>
  </div>
  <div class="two wide column">
    <%= render 'shared/categories' %>
  </div>
</div>