<section class="sec" id="users">
  <div class="content">
    <div class="mxw800p">
      <h3>Our Users</h3>
    </div>
    <div class="services">
      <% @users.each do |user| %>
        <div class="box">
          <div class="iconBx">
            <%= gravatar_for user %>
          </div>
          <div class="content">
            <h2><%= link_to user.username, user_path(user) %></h2>
            <p>
              Posted <%= pluralize(user.articles.count, "article") %>
            </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

